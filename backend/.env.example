# Server config
PORT=5000

CLERK_SECRET_KEY=sk_test_...
# Database config
# Use LOCAL for local MongoDB, CLOUD for MongoDB Atlas
DB=CLOUD
MONGODB_URI=mongodb://localhost:27017/snapmap
MONGODB_CLOUD_URI=
AZURE_STORAGE_CONNECTION=
CONTAINER_NAME=snapmap

# Kafka config
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=snapmap-backend
# Optional auth (e.g., for cloud providers)
KAFKA_USERNAME=
KAFKA_PASSWORD=

# Event clustering config
EVENT_DISTANCE_THRESHOLD_METERS=75
EVENT_TIME_WINDOW_MINUTES=15
MIN_PHOTOS_FOR_EVENT=5
EVENT_CLUSTERING_CONSUMER_GROUP=snapmap-event-clustering

# Sweeper schedule
EVENT_SWEEPER_CRON=*/5 * * * *

# Only scan recent photos (avoid full scan)
EVENT_SWEEPER_LOOKBACK_MINUTES=60

# Batch size limit per sweep
EVENT_SWEEPER_BATCH_SIZE=200

# Finalize inactive events after inactivity
EVENT_FINALIZE_INACTIVE_MINUTES=60
